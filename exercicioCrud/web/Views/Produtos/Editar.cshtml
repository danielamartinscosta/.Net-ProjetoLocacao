@using Negocio.Models
@{

    Produto produto = @ViewBag.produto;
    ViewData["Title"] = "Editar Produto - produto.Nome";
}

<div class="text-center">
    <h1 class="display-4">Editar Produto - @produto.Nome</h1>
</div>

<hr>


<form action="/produtos/@produto.Id/atualizar" method="post">
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="nome" name="nome" class="form-control" id="nome"  value="@produto.Nome" placeholder="Digite seu nome">
  </div>
  <br>
  <div class="form-group">
    <label for="descricao">Descrição</label>
    <input type="descricao" name="descricao" class="form-control" id="descricao" value="@produto.Descricao" placeholder="Digite a descrição do produto">
  </div>
  <br>
  <div class="form-group">
    <label for="dataValidade">Data de validade</label>
    <input type="date" name="dataValidade" class="form-control" id="descricao" value="@produto.DataValidade" placeholder="Digite a data de validade">
  </div>
  <br>
  <div class="form-group">
    <label for="quantidade">Quantidade</label>
    <input type="quantidade" name="quantidade" class="form-control" id="quantidade" value="@produto.QuantidadeEstoque" placeholder="Digite a quantidade">
  </div>
  <br>
  
  <button type="submit" class="btn btn-primary">Enviar</button>
  <a href="/produtos" class="btn btn-default">Voltar</a>
</form>
